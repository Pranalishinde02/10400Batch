package Polymorphism;

public class ShapeMain {

	public static void main(String[] args) {
		
		Shape s1 = new Shape();
		Shape s2 = new Triangle();
		Shape s3 = new Circle();
		s1.AreaFormula();
		s2.AreaFormula();
		s3.AreaFormula();
		
		Triangle t = new Triangle();
		t.Area(20, 30);
		System.out.println(t);
		
		Circle c = new Circle();
		c.Area(40);
		System.out.println(c);

	}

}
